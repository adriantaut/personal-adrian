{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "git pull --rebase 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git commit -m 'Auto-sync from Claude Code' --allow-empty-message 2>/dev/null; git push 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
